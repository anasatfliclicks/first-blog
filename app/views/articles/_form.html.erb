<%= render 'layouts/errors', obj:@article%>

<%= form_for @article do |f| %>
<!-- form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| -->
<div class="form-group">
	<%= f.label :title%>
	<%= f.text_field :title, class: "form-control"%>
</div>
<div class="form-group">
	<%= f.label :description%>
	<%= f.text_area :description, class: "form-control"%>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-offset-2 col-sm-8">
			<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
					<% cb.label(class: "form-check form-check-inline form-check-label") {cb.check_box(class: "form-check form-check-inline form-check-input") + cb.text} %>
			<% end %>
		</div>
	</div>
</div>
<div>
	<%= f.submit class: "btn btn-danger"%>
</div>
<div align="center">
	[ <%= link_to 'Cancel and return to articles', articles_path%> ]
</div>
<% end %>