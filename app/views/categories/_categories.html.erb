<% obj.each do |category| %>
<div class="row center">
	<div class="card col-sm-6 offset-sm-3">
		<div class="article-title">
			<h3><strong><%= category.name.upcase %></strong></h3>
		</div>
		<% if category.photo %>
		<div class="photo" align="center">
			<%= image_tag(category.photo.image, class: "image-circle") if category.photo %>
		</div>
		<% end %>
			<p><span class="badge badge-pill badge-dark"><%= pluralize(category.articles.count,"article") %></span></p>
		<div class="article-actions">
			<%= link_to 'Show this category', category_path(category), class: "btn btn-sm btn-success"%>
			<% if logged_in? && current_user.admin? %>
				<%= link_to 'Edit this category', edit_category_path(category), class: "btn btn-sm btn-primary"%>
				<%= link_to 'Delete this category', category_path(category), 
					method: :delete, data: {confirm: "Are you sure you want to delete this category?"},
					class: "btn btn-sm btn-danger"%>
			<% end %>
		</div>	
	</div>
</div>
<% end %>